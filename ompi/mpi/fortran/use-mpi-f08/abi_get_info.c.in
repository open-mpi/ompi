PROTOTYPE VOID abi_get_info(INFO_OUT info)
{
    int c_ierr;
    MPI_Info c_info;

    c_ierr = @INNER_CALL@(&c_info);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);

    if (MPI_SUCCESS == c_ierr) {
        *info = PMPI_Info_c2f(c_info);
    }
}

